    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch game",
            "type": "blazorwasm",
            "request": "launch",
            "preLaunchTask": "build",
            "cwd": "${workspaceFolder}/src/BlazorRoguelike.Web",            
           
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }

    ]
}